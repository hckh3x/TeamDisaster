PhysicsParams()
{
    SetPhysicsSurfaceID(SRF_METAL)
    NotCollisionDamageToMeMul(0.2)
    SetVelsGate(0.0, 0)    // MunDee Estuvo aquí
    SetWaterFloat(0.06)
    SetAutoDisableVels(0.08, 0.2, 1)    // MunDee Estuvo aquí
    SetAbsorbers(0.05, 0.05)
    SetMaxVels(40.0, 20)    // MunDee Estuvo aquí
    SetMaxWatchingTime(0.8)
    SynchroInterpolation(1)
    AllowDepthCompression(1)
    MaxLifeTime(12)
}

