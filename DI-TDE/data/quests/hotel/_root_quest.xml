<?xml version="1.0"?>
<Quest
     name="game_root"
     level="Hotel"
     pxsl_line="3">
    <!-- we require the player to move to the starting position on this map, -->
    <!-- without any locations/objectives -->
    <!-- used to logically hide all quests of this map behind this one -->
    <!-- The locker is (has to be) visible across maps, but its children are glued to it -->
    <!-- in order not to create an empty goal. -->
    <Phase
         type="go to"
         name="start of all game quests"
         distance="250"
         show_locations="false"
         pxsl_line="9">
        <Destination
             pxsl_line="9">
            <QuestObject
                 class="SpawnPoint"
                 name="sel_prologue_logic::MapStart"
                 pxsl_line="9" />
        </Destination>
        <DebugPlayerPosition
             pxsl_line="10">
            <QuestObject
                 class="SpawnPoint"
                 name="sel_prologue_logic::MapStart"
                 pxsl_line="10" />
        </DebugPlayerPosition>
    </Phase>
    <Phase
         type="checkpoint"
         name="initial resort autosave"
         pxsl_line="11">
        <Destination
             pxsl_line="11">
            <QuestObject
                 class="SpawnPoint"
                 name="sel_prologue_logic::MapStart"
                 pxsl_line="11" />
        </Destination>
    </Phase>
</Quest>
