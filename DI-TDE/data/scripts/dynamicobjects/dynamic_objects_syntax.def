import "dynamic_objects_reason.def"

sub DeclareMeshSkins(string mesh = "", string class = "", string preset = "", int reason = DYNOBJ_REASON_ALL)
{
	Mesh(mesh)
	{
		Object(class, preset, reason);
	}
}

sub DeclareMeshSkinsPhysics(string mesh = "", string preset = "", int reason = DYNOBJ_REASON_ALL)
{
	use DeclareMeshSkins(mesh = mesh, class = "PhysicsObject", preset = preset, reason = reason);
}

