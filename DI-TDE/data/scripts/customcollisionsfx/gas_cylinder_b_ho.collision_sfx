///////////////////////////////////////////////////////////////////////////////////////////////////
// custom collision sfx preset
// http://wiki.techland.pl/chromeengine/bin/view/ChromeEngine4/CollisionSfx
///////////////////////////////////////////////////////////////////////////////////////////////////

import "surface_id.def"

///////////////////////////////////////////////////////////////////////////////////////////////////
sub Sounds()
{
    Hit()
    {
		FreqRandomize(0.7, 1.3);  

		MinInterval(0.3);
        MinSpeed(2);

        SoundHarder(SurfaceId_Gravel, "gas_bottle_hit_ground_XX.wav");
		Sound(SurfaceId_Water,      	"hit_water_XX.wav",	"hit_big_water_XX.wav");
    }
}